@model IEnumerable<Store_MVC.Models.ViewModels.Shop.CategoryVM>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<div class="new-category">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Category Name</span>
        </div>
        <input type="text" id="newcategoryname" class="form-control" />
    </div>
    <p>
        <a href="#" id="newcategory" class="btn btn-success">Add a new category</a>
        <span class="ajax-text">
            <img src="~/Content/img/ajax-loader.gif" height="50"/>
        </span>
    </p>
</div>

@if (!Model.Any())
{
    <h1 class="text-center">There are no category.</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id }, new { @class = "delete btn btn-danger" })
                </td>
            </tr>
         }

</table>
}